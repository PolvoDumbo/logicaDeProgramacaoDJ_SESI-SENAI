algoritmo "MostrarNome"
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

var
// texto            - ( caractere ) - string
// verdadeiro/falso - (  logico   ) - boolean
// número inteiro   - (  inteiro  ) - int
// número decimal   - (   real    ) - float

nomeUsuario : caractere
temCNH : logico
idadeUsuario : inteiro
pontuacaoUsuario : real

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inicio

// output - saída      - telas, leds, respostas por voz, som
// input  - entrada    - teclado, mouse, microfone
// l      - line break - quebra de linha

// nomeUsuario <- "Filipe"

escreval("Digite seu nome: ")
leia(nomeUsuario)
escreva("Oi! ")
escreval("Bom dia, " + nomeUsuario + ".")

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
fimalgoritmo
