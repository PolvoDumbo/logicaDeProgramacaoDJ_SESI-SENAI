algoritmo "Hamburgueria Sesiana"

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

var

nomeProduto, opcao : caractere
valorProduto : real

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inicio

escreval("***** CATÁLOGO *****")
escreval("a: X-Tudo = R$99999999,00")
escreval("b: Cheddar Bacon = R$19,90")
escreval("c: Milkshake = R$99,90 (em promoção)")
escreval("d: Cancelar pedido (e aceitar receber e-mails ofensivos de ameaças e tals)")

leia(opcao)

escolha(opcao)
// switch / case
    caso ("a")
        escreval("x-tudo adicionado!")
    caso ("b")
        escreval("bacon-cheddar adicionado!")
    caso ("c")
        escreval("milkshake adicionado!")
    caso ("d")
        escreval("pedido cancelado!")
    outrocaso
        escreval("opcao invalida!")
fimescolha

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

fimalgoritmo